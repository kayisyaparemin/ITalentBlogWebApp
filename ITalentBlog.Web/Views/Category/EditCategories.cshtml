
@{
    ViewData["Title"] = "EditCategories";
    Layout = "_template";
}

@model List<CategoryViewModel>
<section class="single-post spad">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-8">
                <div class="single-post__comment">
                    <div class="single-post__leave__comment">
                        <div class="widget__title">
                            <h1>Edit Categories </h1>
                        </div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Action</th>
                                    <th>Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="mb-3">
                                                <form id="ConfirmForm" method="get" asp-controller="Category" asp-action="DeleteCategory">
                                                    <input type="hidden" name="confirm_value" value="" />
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <a onclick="Confirm('Category')" class="btn btn-danger text-white">Delete</a>
                                                </form>
                                                </div>
                                            <div><a asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id" class="btn btn-warning">Update</a></div>
                                        </td>
                                        <td>@item.Name</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>