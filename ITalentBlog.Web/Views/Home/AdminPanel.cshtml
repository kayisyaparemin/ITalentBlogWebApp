@{
    ViewData["Title"] = "AdminPanel";
    Layout = "_template";
}



<h1>AdminPanel</h1>
<section class="single-post spad">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-8">
                <div class="single-post__comment">
                    <div class="single-post__leave__comment">
                        <div class="widget__title">
                        </div>
                        <div class="btn-group-vertical" role="group">
                            <div>
                                <a asp-controller="Post" asp-action="CreatePost" class="site-btn">Create Post</a>
                            </div>
                            <hr />
                            <div class="mt-3">
                                <a asp-controller="Post" asp-action="EditPosts" class="site-btn">Edit Posts</a>
                            </div>
                            <hr />
                            <div class="mt-3">
                                <a asp-controller="Category" asp-action="CreateCategory" class="site-btn">Add Category</a>
                            </div>
                            <hr />
                            <div class="mt-3">
                                <a asp-controller="Category" asp-action="EditCategories" class="site-btn">Edit Categories</a>
                            </div>
                            <hr />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
